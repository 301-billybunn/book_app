<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../layout/head')%>
</head>

<body>
  <header>
    <%- include('../../layout/header')%>
  </header>
  <main>
    <div>
      <h2>Search Results</h2>
    </div>
    <ul>
      <% searchesResults.forEach(book => { %>
      <li id="<%=book.id%>" class="books">
        <!-- <div class="top"> -->
          <img src='<%= book.image_url %>'></img>
          <ul>
            <li class="title"> <%= book.title %></li>
            <li class="author"> <%= book.author %></li>
            <li class="description"> <%= book.descript %></li>
            <br />
            <br />
        <!-- </div> -->
        <button type="submit" class="view-details-button" id="<%= book.isbn%>">View Details</button>
        </form>
      <li class="form <%= book.isbn%>">
        <form action="/selectedBook" method="post" class="details-form">
          <legend>Book Details:</legend>
          <!-- <label>Author: </label> -->
          <label>Author: <input type="text" name="author" value="<%= book.author %>" required readonly></label>
          <label>Title: <input type="text" name="title" value="<%= book.title %>" required readonly></label>
          <label>ISBN 13: <input type="text" name="isbn" value="<%= book.isbn %>" required readonly></label>
          <label>Image URL: <input type="text" name="image_url" value="<%= book.image_url %>" required readonly></label>
          <label>Description: <input type="text" name="descript" value="<%= book.descript %>" required readonly></label>
          <label>Bookshelf: <input type="text" name="bookshelf" placeholder="Type in which bookshelf you want it in"
              required></label>
          <button type="submit">Add this book to your bookshelf</button>
        </form>
      </li>
    </ul>
    </li>
    <% }) %>
    </ul>
  </main>
  <script src="https://code.jquery.com/jquery-3.3.1.min.js"
    integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
  <script src="js/app.js"></script>
</body>

</html>